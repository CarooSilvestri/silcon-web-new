<div class="row">
	<h1 class="py-15">
		<span class="box-up">La mejor electr√≥nica</span>
		<br />
		<span class="box-down">para su ascensor</span>
	</h1>
	<div class="overlay-banner">
		<div id="banner"></div>
	</div>
</div>

<script>
	import gsap from "gsap";

	const tl = gsap.timeline();
	const title_up = document.querySelector(".box-up");
	const words_up = title_up?.textContent?.split(" ") ?? [];

	if (title_up)
		title_up.innerHTML = words_up
			.map(
				(word) => `<span class="word text-8xl text-silcon-red">${word} </span>`
			)
			.join(" ");

	const title_down = document.querySelector(".box-down");
	const words_down = title_down?.textContent?.split(" ") ?? [];

	if (title_down)
		title_down.innerHTML = words_down
			.map(
				(word) => `<span class="word text-8xl text-silcon_red">${word} </span>`
			)
			.join(" ");

	tl.fromTo(
		".word",
		{ opacity: 0 },
		{
			opacity: 1,
			duration: 1.5,
			ease: "power4.out",
			stagger: 0.2,
		}
	);

	tl.fromTo(
		".overlay-banner",
		{ opacity: 0, y: -100 },
		{ duration: 0.5, y: 0, opacity: 1, ease: "power2" },
		">"
	);
</script>

